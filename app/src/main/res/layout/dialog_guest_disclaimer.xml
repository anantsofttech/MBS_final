<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_corner_signup"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_15"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_guest_limitations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest Limitations"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_15" />

    <TextView
        android:id="@+id/tv_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address used with an Existing Account"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="@dimen/dimen_14" />


    <View
        android:id="@+id/view_line"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_legal_title"
        android:background="@android:color/darker_gray" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:id="@+id/tv_guest_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="@dimen/dimen_10"
        android:textSize="@dimen/dimen_11" />

    <TextView
        android:id="@+id/tv_guest_login_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="@dimen/dimen_10"
        android:visibility="gone"
        android:textSize="@dimen/dimen_11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_guest_btn"
        android:visibility="gone"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_signin_guest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_guest_msg"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/rounded_corner_all"
            android:padding="@dimen/_5sdp"
            android:text="Sign in "
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="false"
            android:layout_weight="0.5"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/btn_continue_guest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_guest_msg"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="7dp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rounded_corner_all"
            android:text="Continue as a guest"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="false"
            android:layout_weight="0.5"
            android:textColor="@color/White" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_close_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_legal_msg"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/rounded_corner_all"
        android:padding="@dimen/dimen_ButtonPadding"
        android:text="Close"
        android:textSize="@dimen/_12sdp"
        android:textAllCaps="false"
        android:textColor="@color/White" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>