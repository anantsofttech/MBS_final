<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <TextView
            android:id="@+id/txt_delete_account_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete My Online Account"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/_17sdp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />

        <View
            android:id="@+id/view_line"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_legal_title"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_delete_account_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/dimen_11" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/round_shape_red_btn"
            android:padding="@dimen/dimen_ButtonPadding"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Yes, Delete My Account"
            android:textSize="@dimen/dimen_ButtonTextSize"
            android:textAllCaps="false"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/btn_NO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/round_shape_green_btn"
            android:padding="@dimen/dimen_ButtonPadding"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="No, Go Back"
            android:textSize="@dimen/dimen_ButtonTextSize"
            android:textAllCaps="false"
            android:textColor="@color/White" />

    </LinearLayout>
</ScrollView>