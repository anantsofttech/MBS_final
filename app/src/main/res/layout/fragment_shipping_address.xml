<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llmainShipLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aspl.fragment.ShippingAddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_norecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="A shipping address can only be entered at check out."/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shippingAddList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"/>

    </LinearLayout>

</LinearLayout>