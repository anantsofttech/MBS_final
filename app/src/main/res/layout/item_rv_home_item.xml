<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    tool:cardElevation="5dp"
    tools:ignore="NewApi,UnusedAttribute">

    <RelativeLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:id="@+id/rl_wishlist"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvWishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/circleshape"
            android:drawableLeft="@drawable/ic_small_wishlist"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_13"
                    android:src="@drawable/noimage" />

                <FrameLayout
                    android:id="@+id/fl_sale_left"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_onsale_left"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/onsaleleft_3" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_sale_right"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_onsale_right"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/onsaleright_3" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_sale_hang"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_onsale_hang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/onsalehang_3_new" />

                </FrameLayout>


            </FrameLayout>

        </LinearLayout>


        <!--        <LinearLayout-->
        <!--            android:gravity="center"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_width="@dimen/_80sdp"-->
        <!--            android:layout_height="@dimen/_85sdp"-->
        <!--            android:orientation="horizontal">-->

        <!--            <ImageView-->
        <!--                android:id="@+id/img_item"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:layout_marginLeft="@dimen/dimen_10"-->
        <!--                android:layout_marginRight="@dimen/dimen_10"-->
        <!--                android:src="@drawable/noimage">-->

        <!--            </ImageView>-->
        <!--        </LinearLayout>-->


        <!--android:adjustViewBounds="true"-->

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_1sdp"
            android:focusedByDefault="true"
            android:foregroundGravity="center"
            android:visibility="gone" />
        <!--android:max="2"-->
        <!--android:numStars="2"-->
        <!--android:rating="2"-->
        <!--android:stepSize="2"-->

        <!-- <RatingBar
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/ratingBar"
             style="?android:attr/ratingBarStyleIndicator"
             android:scaleX=".5"
             android:rating="2"
             android:scaleY=".5"
             android:layout_gravity="left|center_vertical"
             android:paddingLeft="@dimen/_10sdp"
             android:numStars="2"
             android:max="2" />-->
        <!-- android:transformPivotX="0dp"
         android:transformPivotY="0dp"-->

        <TextView
            android:id="@+id/tvDiscountName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="top|center"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/green"
            android:textSize="@dimen/dimen_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtitemtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:minLines="2"
            android:padding="@dimen/_3sdp"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_10" />

        <LinearLayout
            android:id="@+id/ll_home_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="$15"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPromoprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_10"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtitemOutOfStock"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:padding="@dimen/_2sdp"
            android:text="Out of stock"
            android:textColor="@color/wallet_holo_blue_light"
            android:textSize="@dimen/dimen_10"
            android:textStyle="italic|bold" />

        <LinearLayout
            android:id="@+id/ll_option"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp">

            <TextView
                android:id="@+id/txt_option"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_2sdp"
                android:text="99 option "
                android:textSize="@dimen/dimen_12"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qtyandCart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_quantity_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_discount_name_rv_item"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:id="@+id/img_minus"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="@dimen/_5sdp"-->
                <!--android:layout_marginRight="@dimen/_5sdp"-->
                <!--android:layout_marginTop="@dimen/_5sdp"-->
                <!--android:src="@drawable/minus" />-->
                <RelativeLayout
                    android:id="@+id/llMinus"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_25"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/img_minus"
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:src="@drawable/ic_minus_black" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_item_quantity"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <!--<RelativeLayout-->
                <!--android:id="@+id/llplus"-->
                <!--android:layout_width="@dimen/dimen_30"-->
                <!--android:layout_height="@dimen/dimen_20">-->
                <!--<ImageView-->
                <!--android:id="@+id/img_plus"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_width="@dimen/dimen_12"-->
                <!--android:layout_height="@dimen/dimen_12"-->
                <!--android:layout_margin="@dimen/_5sdp"-->
                <!--android:src="@drawable/plus" />-->
                <!--</RelativeLayout>-->


                <RelativeLayout
                    android:id="@+id/llplus"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_25"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/ic_plus_black" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/ivAddtoCart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_cart_white" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>