<android.support.v4.widget.NestedScrollView xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/llcardOnFile"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aspl.fragment.CardOnFileFragment">

    <TextView
        android:id="@+id/tv_cardOnfile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="@string/Card_On_File"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        tool:cardCornerRadius="@dimen/_3sdp"
        tool:cardElevation="3dp"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:id="@+id/llCardLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp">

                <ImageView
                    android:id="@+id/iv_card"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/img_card_on_file"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tvCardNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:maxLength="19"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:gravity="left"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/White"
                    android:textSize="@dimen/_19sdp" />

                <TextView
                    android:id="@+id/tvCardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold|italic" />

            </FrameLayout>


            <TextView
                android:id="@+id/tvCustomerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/default_color"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCounter"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="fill_parent">
                    <Button
                        android:id="@+id/btn_Edit"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/round_shap_red"
                        android:padding="@dimen/_4sdp"
                        android:text="EDIT"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/dimen_ButtonTextSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_10">

                    <Button
                        android:id="@+id/btn_Delete"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/round_shap_red"
                        android:padding="@dimen/_4sdp"
                        android:text="DELETE"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/dimen_ButtonTextSize" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_noCard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:text="@string/no_card_info"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            />

    </android.support.v7.widget.CardView>


</LinearLayout>
</android.support.v4.widget.NestedScrollView>