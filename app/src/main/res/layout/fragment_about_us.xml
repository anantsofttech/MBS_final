<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_aboutus"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_root_aboutuslayout"
        tools:context="com.aspl.fragment.RewardFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/tv_aboutus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="@string/aboutus"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tool="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_12sdp"
            android:orientation="vertical"
            tool:cardElevation="3dp"
            tool:cardCornerRadius="@dimen/_3sdp"
            tools:ignore="UnusedAttribute">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_aboutus_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="start"
                android:textSize="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:text="" />

            <com.aspl.Utils.ObservableWebView
                android:transitionGroup="true"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:id="@+id/Container"
                android:layout_width="match_parent"
                android:padding="0dp"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <!--<com.aspl.Utils.ObservableWebView-->
            <!--android:transitionGroup="true"-->
            <!--android:layout_marginLeft="@dimen/_2sdp"-->
            <!--android:layout_marginRight="@dimen/_4sdp"-->
            <!--android:id="@+id/Container"-->
            <!--android:layout_width="match_parent"-->
            <!--android:padding="0dp"-->
            <!--android:layout_height="wrap_content"/>-->

    </LinearLayout>

</androidx.core.widget.NestedScrollView>