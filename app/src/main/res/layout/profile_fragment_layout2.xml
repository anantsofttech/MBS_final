<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:gravity="top"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dummy_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/view_container"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingTop="3dp"
                    android:text="Welcome!"
                    android:textSize="@dimen/dimen_15"
                    android:textColor="@color/White"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_23sdp"
                    android:text="BOX SALT"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtPersonEmail"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:text="@string/str_cap_signin"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/White"
                    android:textSize="@dimen/dimen_20"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/bottom_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>
    <ExpandableListView
        android:id="@+id/Manage_expList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"

        android:groupIndicator="@drawable/group_indicator_updown"
        android:dividerHeight="0dp"
        android:scrollbars="horizontal"
        />

</LinearLayout>