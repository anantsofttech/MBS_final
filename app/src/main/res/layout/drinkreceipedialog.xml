<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:padding="@dimen/_5sdp"
            android:text="Drink Recipes"
            android:textColor="@color/black"
            android:textSize="@dimen/_26sdp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_close_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/dark_gray" />

    <LinearLayout
        android:id="@+id/llDrinkReceipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:layout_height="0dp"/>

        <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="9"
            android:scrollbars="vertical">

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical">-->

                <!--<LinearLayout-->
                    <!--android:id="@+id/ll_checkbox"-->
                    <!--android:layout_marginLeft="@dimen/_15sdp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:orientation="vertical">-->

                    <!--<android.support.v7.widget.RecyclerView-->
                        <!--android:id="@+id/recyclerview"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"/>-->

                <!--</LinearLayout>-->


                <LinearLayout
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            <!--</LinearLayout>-->

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/round_shap_red"
            android:text="CLOSE"
            android:textColor="@color/White"
            android:textSize="@dimen/dimen_ButtonTextSize" />

        <LinearLayout
            android:id="@+id/llBackEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_15sdp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/round_shap_red"
                android:text="BACK"
                android:textColor="@color/White"
                android:textSize="@dimen/dimen_ButtonTextSize" />

            <TextView
                android:id="@+id/tvEmailReceipe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text="@string/emailReceipe"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llDrinkReceipeSendEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:id="@+id/ll_ImageDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_without_radius"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@+id/tvItemTitleDesc1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item"
                android:gravity="center"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/noimage" />

            <TextView
                android:id="@+id/tvPrice"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:text=""
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDiscountName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:maxLines="2"
                android:text=""
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSKU"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text=""
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text=""
                android:gravity="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDrinkEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/ll_ImageDetails"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etDrinkEmail"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:background="@drawable/lightgrey_border"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etDrinkSecondEmail"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:background="@drawable/lightgrey_border"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:editable="false"
                android:inputType="none"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp" />


            <Button
                android:id="@+id/btnDrinkSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/round_shap_red"
                android:text="@string/str_send"
                android:textSize="@dimen/dimen_ButtonTextSize"
                android:textColor="@color/White" />

        </LinearLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
