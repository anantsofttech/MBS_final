<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aspl.fragment.GiftCardFragment2"
    android:layout_margin="@dimen/_3sdp"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_giftcard_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/ll_giftcard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header1_giftcard2_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Enter your Gift Card details"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_185sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                app:cardElevation="4dp"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/img_item_gift_card"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/no_image_new"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="$ 50.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_header2_giftcard_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="1. Select a style for your Gift Card"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sub_giftcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_header3_giftcard_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="2. Enter your Gift Card details"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ll_deatils_giftcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_7sdp"
                android:orientation="vertical"
                app:cardElevation="4dp"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_3sdp"
                    android:padding="@dimen/_7sdp">

                    <LinearLayout
                        android:id="@+id/ll_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_amount_disc"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:text="( Amount range $50.00 - $500.00 )"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:layout_gravity="center"
                                android:gravity="start|center_vertical"
                                android:visibility="gone">

                                <TextView
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_15sdp"
                                    android:text="Amount"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:layout_gravity="center"
                                android:gravity="start|center_vertical">

                                <EditText
                                    android:foregroundGravity="center"
                                    android:id="@+id/edt_price_giftcard"
                                    style="@style/Edittext_style8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:selectAllOnFocus="true"
                                    android:inputType="number"
                                    android:hint=" Enter Amount "/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_fast_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_2sdp"
                            android:weightSum="1"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_50"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp"
                                style="@style/Edittext_style5"
                                android:layout_margin="@dimen/_3sdp"
                                android:text=" $50 "/>

                            <TextView
                                android:id="@+id/tv_100"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp"
                                style="@style/Edittext_style5"
                                android:layout_margin="@dimen/_3sdp"
                                android:text=" $100 "/>

                            <TextView
                                android:id="@+id/tv_200"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp"
                                style="@style/Edittext_style5"
                                android:layout_margin="@dimen/_3sdp"
                                android:text="$200 "/>

                            <TextView
                                android:id="@+id/tv_250"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp"
                                style="@style/Edittext_style5"
                                android:layout_margin="@dimen/_3sdp"
                                android:text=" $250 "/>

                            <TextView
                                android:id="@+id/tv_500"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp"
                                style="@style/Edittext_style5"
                                android:layout_margin="@dimen/_3sdp"
                                android:text=" $500 "/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:orientation="vertical">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15sdp"
                            android:text="Delivery"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_email_gift_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_email_gift_card"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:paddingBottom="@dimen/_9sdp"
                                    android:paddingTop="@dimen/_9sdp"
                                    android:text="E-Mail"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/_12sdp" />

                                <View
                                    android:id="@+id/view_between_email_gift_card"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent" />

                                <Button
                                    android:id="@+id/btn_text_gift_card"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:paddingBottom="@dimen/_9sdp"
                                    android:paddingTop="@dimen/_9sdp"
                                    android:text="Text"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/_12sdp" />

                                <View
                                    android:id="@+id/view_between_btn_text_gift_card"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"/>

                                <Button
                                    android:id="@+id/btn_physical_gift_card"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:paddingBottom="@dimen/_9sdp"
                                    android:paddingTop="@dimen/_9sdp"
                                    android:text="Physical Card"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_QTY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:layout_gravity="start"
                            android:gravity="start|center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_15sdp"
                                android:text="Quantity"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_gravity="center"
                            android:gravity="start|center_vertical">

                            <EditText
                                android:foregroundGravity="center"
                                android:id="@+id/edt_qty_giftcard"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/Edittext_style8"
                                android:maxLength="2"
                                android:inputType="number"
                                android:selectAllOnFocus="true"
                                android:text="1"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_to_email_address_giftcart2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:layout_gravity="center"
                                android:gravity="start|center_vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_15sdp"
                                    android:text="To"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="start|center_vertical">

                                <EditText
                                    android:id="@+id/edt_to_email_giftcard"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/Edittext_style5"
                                    android:selectAllOnFocus="true"
                                    android:hint="Email for recipient 1" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_to_email_2"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="start|center_vertical"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/edt_to_email_giftcard_2"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/Edittext_style5"
                                    android:selectAllOnFocus="true"
                                    android:hint="Email for recipient 2" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_to_email_3"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="start|center_vertical"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/edt_to_email_giftcard_3"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/Edittext_style5"
                                    android:selectAllOnFocus="true"
                                    android:hint="Email for recipient 3" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_from_address_giftcart2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:weightSum="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:layout_gravity="center"
                                android:gravity="start|center_vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="From"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:layout_gravity="center"
                                android:gravity="start|center_vertical">

                                <EditText
                                    android:id="@+id/edt_from_email_giftcard"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/Edittext_style5"
                                    android:selectAllOnFocus="true"
                                    android:hint="Name of the Sender" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_text_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:layout_gravity="center"
                            android:gravity="start|center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_15sdp"
                                android:text="To"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_gravity="center"
                            android:gravity="start|center_vertical">

                            <EditText
                                android:id="@+id/edtMobile"
                                style="@style/Edittext_style5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/str_mobile2"
                                android:inputType="number"
                                android:textSize="@dimen/_15sdp"
                                android:maxLength="14" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_message_giftcart2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:layout_gravity="center"
                            android:gravity="start|center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_15sdp"
                                android:text="Message"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_gravity="center"
                            android:gravity="start|center_vertical">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_message_giftcard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Edittext_style7"
                                android:gravity="top"
                                android:hint="Message for recipient."
                                android:imeOptions="actionDone"
                                android:maxLength="1500"
                                android:minLines="5"
                                android:selectAllOnFocus="true"
                                android:padding="@dimen/_5sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_delivery_date_giftcart2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:layout_gravity="center"
                            android:gravity="start|center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/_15sdp"
                                android:text="Delivery Date"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="0.3"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <EditText
                                android:id="@+id/edt_select_date"
                                android:layout_width="match_parent"
                                android:drawablePadding="@dimen/_2sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:drawableRight="@drawable/baseline_calendar_month_24"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:hint="Select Date"
                                android:gravity="top"
                                android:clickable="true"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                style="@style/Edittext_style5"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_delivery_disc"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:text="(Delivery will occur early AM of the date selected.)"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_7sdp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_back_gift_card"
                    android:layout_marginRight="@dimen/dimen_9"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_7sdp"
