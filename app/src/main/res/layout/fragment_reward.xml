<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root_rewardlayout"
    tools:context="com.aspl.fragment.RewardFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_root_reward_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="@string/rewards"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/idIVQrcode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="qr_code"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:orientation="vertical"
        tool:cardElevation="4dp"
        tool:cardCornerRadius="@dimen/_5sdp"
        tools:ignore="UnusedAttribute">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/ll_main_loyalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Member" />

            <TextView
                android:id="@+id/tv_memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_member"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp"
                android:text="" />

            <TextView
                android:id="@+id/tv_rewardpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_memberName"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Reward Points" />

            <TextView
                android:id="@+id/tv_rewardPointValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rewardpoint"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp"
                android:text="" />

            <TextView
                android:id="@+id/tv_rebateAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rewardPointValue"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Rebate Available" />

            <TextView
                android:id="@+id/tv_rebateAvailableVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rebateAvailable"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textColor="@android:color/black"
                android:text="" />

            <TextView
                android:id="@+id/tv_lastPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rebateAvailableVal"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Last Purchase" />

            <TextView
                android:id="@+id/tv_lastPurchase_Val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lastPurchase"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textColor="@android:color/black"
                android:text="" />


            <TextView
                android:id="@+id/tv_rewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lastPurchase_Val"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Rewards #" />

            <TextView
                android:id="@+id/tv_rewardsVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rewards"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textColor="@android:color/black"
                android:text="" />

            <TextView
                android:id="@+id/tv_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rewardsVal"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Program Rules" />

            <TextView
                android:id="@+id/tv_programtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_program"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:gravity="start"
                android:textSize="@dimen/_13sdp"
                android:textColor="@android:color/black"
                android:text="" />

        </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>


</LinearLayout>
